@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href='http://fonts.googleapis.com/css?family=Muli' rel='stylesheet' type='text/css' />
    <link rel="stylesheet" type="text/css" href="bootstrap-3.3.5-dist/css/bootstrap.css" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Payload</title>
    <style>
        .mynav {
             /* Safari 4-5, Chrome 1-9 */
              background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#C5C5C5), to(#E0DFDF));

              /* Safari 5.1, Chrome 10+ */
              background: -webkit-linear-gradient(top, #E0DFDF, #C5C5C5);

              /* Firefox 3.6+ */
              background: -moz-linear-gradient(top, #E0DFDF, #C5C5C5);

              /* IE 10 */
              background: -ms-linear-gradient(top, #E0DFDF, #C5C5C5);

              /* Opera 11.10+ */
              background: -o-linear-gradient(top, #E0DFDF, #C5C5C5);

              height:80px;
        }
        .myfont{
            font-family: 'Muli', sans-serif;
            font-size:20px;
            color:#5e5b5b;            
            margin-right: 15px;
            margin-left: 15px;
            margin-top: 25px;
            
        }
        .cont{
            margin-top:100px;
           
        }
        .calc{
            margin-left:100px

        }
        .calc table
        {
            border-spacing:5px;
            border-collapse:separate;
            
        }
        body{
            color:#696969;
            
        }
        .calc table tr{
            /* Safari 4-5, Chrome 1-9 */
            background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#C5C5C5), to(#E0DFDF));

            /* Safari 5.1, Chrome 10+ */
            background: -webkit-linear-gradient(top, #E0DFDF, #C5C5C5);

            /* Firefox 3.6+ */
            background: -moz-linear-gradient(top, #E0DFDF, #C5C5C5);

            /* IE 10 */
            background: -ms-linear-gradient(top, #E0DFDF, #C5C5C5);

            /* Opera 11.10+ */
            background: -o-linear-gradient(top, #E0DFDF, #C5C5C5);
            font-size:70pt; 
            margin-bottom:5px
        }
        .calc table td{
            width:120px;
            text-align:center;
            border-radius:10px;
            border-color:#979797;
            border:1px solid;
            margin-right:5px          
        }
        .calc table button{
           width:100%;
           height:auto;
           background-color:inherit;
           border:none;  
           border-radius:10px;            
        }
        .calc table button:hover{
           background-color:#E0DFDF;  
           color:cornflowerblue;                    
        }
        .mybutton{
            margin-top:15px;
            width:150px;
            height:60px;
            background-color:cornflowerblue;            
            font-size:20pt;
            border-radius:10px;  
            border:1px solid;
            border-color:#979797;
            color:white;

        }
        .mybutton:hover{
            background-color:#E0DFDF;  
            background-image:none;
            color:#979797;
        }
        .amount{
            font-size:60pt;
            text-align:center;
        }
        .amountb{
            font-size:30pt;
            text-align:right;
        }
        .myinput{
            background-color:white;
            border:none;
            font-size:70pt;
            width:340px;
            text-align:right;
        }
        .swap{          
	       float:right;
           margin-top:230px;
        }
        
    </style>
</head>

<body>
    <div class="mynav">
        <div style="float:left ;margin-left:30px">
            <a class="navbar-brand" href="#"><img alt="Payload" src="~/Content/images/logo.png" /></a>
            <p class="navbar-text"><img alt="Payload" src="~/Content/images/payload.png" /></p>
        </div>
        <div style="float:right">
            <p class="myfont" style="font-weight: bold;">Point of Sale App</p>
        </div>
    </div>
    <div style="width:1500px; margin-left:200px;">
        <div class="cont">
            <div class="calc" style="float:left">
                <table>
                    <tr>
                        <td><button id="1" onclick='calc(1)'>1</button></td>
                        <td><button id="2" onclick='calc(2)'>2</button></td>
                        <td><button id="3" onclick='calc(3)'>3</button></td>
                    </tr>
                    <tr>
                        <td><button id="4" onclick='calc(4)'>4</button></td>
                        <td><button id="5" onclick='calc(5)'>5</button></td>
                        <td><button id="6" onclick='calc(6)'>6</button></td>
                    </tr>
                    <tr>
                        <td><button id="7" onclick='calc(7)'>7</button></td>
                        <td><button id="8" onclick='calc(8)'>8</button></td>
                        <td><button id="9" onclick='calc(9)'>9</button></td>
                    </tr>
                    <tr>
                        <td><button id="10" onclick='calc(".")'>.</button></td>
                        <td><button id="11" onclick='calc(0)'>0</button></td>
                        <td><button id="12" onclick='calc(12)'><img src="~/Content/images/deletebutton.png" /></button></td>
                    </tr>

                </table>
                <div style="text-align:center">
                    <a class="mybutton" href="http://localhost:23416/home/qr">Proceed</a>
                </div>

            </div>
            <div style="float:left; margin-left:100px ;">
                <div style="float:left">
                    <h2>Your Amount</h2>
                    <div style="border:1px solid; border-radius:5px; margin:20px ; text-align:center">
                        <div style="width:640px;height:300px;">
                            <div id="top" style="height:148px;margin-top:25px">
                                <input disabled maxlength="5" type="number" onchange="convt(this.value)" class="myinput" id="topvalue" value="0" />
                                <text class="amount" id="toptext"> PKR</text>
                            </div>
                            <div style="height:5px;width:auto; background-color:#979797;"></div>
                            <div id="bottom" style="width:auto;margin-top:50px;text-align:right;margin-right:80px">
                                <text class="amountb" id="bottomvalue">0</text>
                                <text class="amountb" id="bottomtext"> BTC</text>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swap">
                    <a><img src="~/Content/images/rev.png" onclick='swap()' /></a>
                    <text id="txt" style="font-size:medium">
                        <br />click to enter<br />amount in BTC
                    </text>

                </div>
            </div>
        </div>
    </div>
    


</body>
</html>

<script>
    var tval = document.getElementById("topvalue");
    var bval = document.getElementById("bottomvalue");

    var ttxt = document.getElementById("toptext");
    var btxt = document.getElementById("bottomtext");

    var sp = document.getElementById("txt");

    var pub = 1;
    var num = 29510;
    function calc(x)
    {
        if (x == 12)
        {
            tval.value = 0;
            bval.innerHTML = 0;
            return;
        }
        if (tval.value == 0)
        {
            tval.value = x;
        }
        else {
            tval.value = tval.value + x;
        }
        if (pub == 1)
        {
            bval.innerHTML = (parseInt(tval.value) / num).toFixed(3);
        }
        else
        {
            bval.innerHTML = (parseFloat(tval.value) * num).toFixed(3);
        }
        
    }
    function swap() {
        tval.value = 0;
        bval.innerHTML = 0;
        if(pub==1)
        {
            ttxt.innerHTML = " BTC";
            btxt.innerHTML = " PKR";
            sp.innerHTML = "<br />click to enter<br />amount in PKR";
            pub = 0;
        }
        else
        {
            ttxt.innerHTML = " PKR";
            btxt.innerHTML = " BTC";
            sp.innerHTML = "<br />click to enter<br />amount in BTC";
            pub = 1;
        }
    }
</script>
